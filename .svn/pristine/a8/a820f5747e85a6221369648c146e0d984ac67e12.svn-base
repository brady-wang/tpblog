<!DOCTYPE html>
<html>

<head>
    <title>Tables</title>
    <!-- Bootstrap -->
    <link href="__PUBLIC__/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="__PUBLIC__/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
    <link href="__PUBLIC__/assets/styles.css" rel="stylesheet" media="screen">
    <link href="__PUBLIC__/assets/DT_bootstrap.css" rel="stylesheet" media="screen">
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="__PUBLIC__/vendors/flot/excanvas.min.js"></script><![endif]-->
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="__PUBLIC__/vendors/modernizr-2.6.2-respond-1.1.0.min.js"></script>
</head>

{include file="common/top" /}
<div class="container-fluid">
    <div class="row-fluid">
        {include file="common/left" /}
        <!--/span-->
        <div class="span9" id="content">

            <div class="row-fluid">
                <a type="button" class="btn btn-info pull-left " href="{:url('admin/add')}"><i class="icon-plus"></i>新增用户</a>
            </div>


            <div class="row-fluid">
                <!-- block -->
                <div class="block">
                    <!--面包屑开始-->
                    <div class="navbar">
                        <div class="navbar-inner">
                            <ul class="breadcrumb">
                                <li>
                                    <a href="{:url('index/index')}">管理后台</a> <span class="divider">/</span>
                                </li>
                                <li class="active">用户管理</li>

                            </ul>
                        </div>
                    </div>
                    <!--面包屑结束-->
                    <div class="block-content collapse in">
                        <div class="span12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>用户名</th>
                                    <th>昵称</th>
                                    <th>邮箱</th>
                                    <th>描述</th>
                                    <th>时间</th>
                                    <th>操作</th>
                                </tr>
                                </thead>
                                <tbody>
                                {foreach $list as $v}
                                    <tr >
                                        <td>{$v.id}</td>
                                        <td>{$v.username}</td>
                                        <td>{$v.nick_name}</td>
                                        <td>@{$v.email}</td>
                                        <td>@{$v.desc}</td>
                                        <td>@{$v.create_time}</td>
                                        <td><a href = "{:url('admin/add',['id'=>$v.id])}">编辑</a>/<a class="admin_del_id" href = "javascript:void(0);" data-id="{$v.id}">删除</a></td>
                                    </tr>
                               {/foreach}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>

            
            </div>
        </div>
    </div>
    <hr>
    {include file="common/footer" /}
</div>
<!--/.fluid-container-->

<script src="__PUBLIC__/vendors/jquery-1.9.1.js"></script>
<script src="__PUBLIC__/bootstrap/js/bootstrap.min.js"></script>
<script src="__PUBLIC__/vendors/datatables/js/jquery.dataTables.min.js"></script>
<script src="__COMMON__/layer/layer.js"></script>


<script src="__PUBLIC__/assets/scripts.js"></script>
<script src="__PUBLIC__/assets/DT_bootstrap.js"></script>
<script>
    $(function() {
        $(".admin_del_id").click(function(){
            var id = $(this).attr('data-id');
            layer.msg(id)

            layer.confirm('您确定要删除？', {
                btn: ['确定','取消'] //按钮
            }, function(){
                var url = "{:url('admin/del',['id'=>$v.id])}";
                var data = {};
                data.id = id;

                $.ajax({
                    type:'post',
                    dataType:'json',
                    url:"{:url('admin/del')}",
                    data:data,
                    success:function(res){
                        layer.msg(res.msg);
                        if(res.success == true){
                            var href = "{:url('admin/index')}";
                            setTimeout("location.href='"+href+"';",100);
                        }
                    }
                })
            }, function(){

            });



        })
    });
</script>
</body>

</html>